<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_name"
        android:id="@+id/title_ID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/placeholder"
        android:id="@+id/c_ID"
        android:layout_below="@+id/title_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/placeholder"
        android:id="@+id/f_ID"
        android:layout_below="@+id/c_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/celsius_units"
        android:id="@+id/c_units_ID"
        android:layout_alignBaseline="@+id/c_ID"
        android:layout_alignTop="@+id/c_ID"
        android:layout_toRightOf="@+id/c_ID"
        android:layout_toEndOf="@+id/c_ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/fahrenheit_units"
        android:id="@+id/f_units_ID"
        android:layout_alignBaseline="@+id/f_ID"
        android:layout_alignTop="@+id/f_ID"
        android:layout_toRightOf="@+id/f_ID"
        android:layout_toEndOf="@+id/f_ID" />
</RelativeLayout>
